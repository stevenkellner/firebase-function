{
    "name": "@stevenkellner/firebase-function",
    "version": "1.4.125",
    "description": "A TypeScript library designed to simplify the creation and deployment of Firebase functions. It provides a structured and type-safe way to define Firebase functions, requests, and schedules.",
    "author": "Steven Kellner",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc",
        "rebuild": "tsc --build --force",
        "lint": "eslint .",
        "emulator:start": "npm run rebuild && cd test/firebaseProject/functions && npm run rebuild && cd .. && firebase emulators:start --inspect-functions",
        "emulator:wait": "ts-node test/waitForEmulator.ts",
        "emulator:end": "kill-port 5001 8080",
        "test": "concurrently \"npm run emulator:start || true\" \"npm run emulator:wait && mocha && npm run emulator:end\"",
        "test:coverage": "nyc npm run test",
        "coverage:report": "npx http-server -o ./coverage -p 8090",
        "upgrade": "ncu --upgrade --install always",
        "release": "npm run rebuild && npm run test && npm run lint && npm version patch && git push --follow-tags"
    },
    "devDependencies": {
        "@assertive-ts/core": "^2.1.0",
        "@eslint/js": "^9.17.0",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@stylistic/eslint-plugin": "^2.12.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.10.2",
        "@types/tcp-port-used": "^1.0.4",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "cash-true": "^0.0.2",
        "concurrently": "^9.1.1",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "http-server": "^14.1.1",
        "kill-port": "^2.0.1",
        "mocha": "^11.0.1",
        "npm-check-updates": "^17.1.12",
        "nyc": "^17.1.0",
        "psaux": "^0.4.0",
        "tcp-port-used": "^1.0.2",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.2"
    },
    "dependencies": {
        "@stevenkellner/typescript-common-functionality": "^1.0.49",
        "axios": "^1.7.9",
        "dotenv": "^16.4.7",
        "firebase": "^11.1.0",
        "firebase-admin": "^13.0.2",
        "firebase-functions": "^6.2.0"
    }
}
