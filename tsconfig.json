{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
        "index.ts",
        "src",
        "testSrc",
        "test",
        "example"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
